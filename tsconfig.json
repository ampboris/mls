{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",

    /* Modules */
    "module": "commonjs",
    "resolveJsonModule": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Node.js Types */
    "types": ["node"],
    "lib": ["es2020"],

    /* Completeness */
    "skipLibCheck": true
  }
}
